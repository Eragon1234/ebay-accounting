// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id Int @id @default(autoincrement())
  type ExpenseType
  name String
  amount Float
  date DateTime @default(now())
  income Income? @relation(fields: [incomeId], references: [id])
  incomeId Int?
}

model Income {
  id Int @id @default(autoincrement())
  name String
  amount Float
  date DateTime
  expenses Expense[]
}

enum ExpenseType {
  EBAY_FEE
  EBAY_ADS
  SHIPPING
  PURCHASE
  OTHER
}